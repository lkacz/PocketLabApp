<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appearanceDialogRootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Wrap all content in one LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TOP PREVIEWS FOR HEADER, BODY, CONTINUE BTN -->
        <LinearLayout
            android:id="@+id/previewContainerTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header preview -->
            <TextView
                android:id="@+id/previewHeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Body preview -->
            <TextView
                android:id="@+id/previewBodyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body text, e.g. Lorem ipsum..."
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Continue button preview -->
            <Button
                android:id="@+id/previewContinueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue Button"
                android:layout_gravity="right"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- SLIDERS / PICKERS BELOW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Header:"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderHeaderSize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvHeaderSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:layout_marginStart="4dp" />

            <View
                android:id="@+id/headerColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body:"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderBodySize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvBodySizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:layout_marginStart="4dp" />

            <View
                android:id="@+id/bodyColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- CONTINUE BTN SLIDER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue BTN:"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderContinue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvContinueSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:layout_marginStart="4dp" />

            <View
                android:id="@+id/continueTextColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp" />

            <View
                android:id="@+id/continueBackgroundColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- CONTINUE BTN PADDING (Left/Right) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue Padding (L/R):"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderContinuePaddingH"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvContinuePaddingHValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- CONTINUE BTN PADDING (Top/Bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue Padding (T/B):"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderContinuePaddingV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvContinuePaddingVValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- (spacer) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp" />

        <!-- PREVIEW FOR SCALE ITEM, RESPONSE BUTTONS -->
        <LinearLayout
            android:id="@+id/previewContainerScaleAndResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/previewItemTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCALE ITEM"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/previewResponseButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESPONSE BUTTON 1"
                android:layout_marginBottom="4dp" />

            <!-- Container for multiple response buttons (use same slider for margin/padding) -->
            <LinearLayout
                android:id="@+id/previewPaddingButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/previewPaddingButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Response 2"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/previewPaddingButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Response 3" />
            </LinearLayout>
        </LinearLayout>

        <!-- ITEM SLIDER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item:"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderItemSize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvItemSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:layout_marginStart="4dp" />

            <View
                android:id="@+id/itemColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- RESPONSE SLIDER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response:"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderResponseSize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvResponseSizeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:layout_marginStart="4dp" />

            <!-- Response text color and background color pickers -->
            <View
                android:id="@+id/responseColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"/>

            <View
                android:id="@+id/buttonTextColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

            <View
                android:id="@+id/buttonBackgroundColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- RESPONSE MARGIN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response Margin:"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderResponseMargin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvResponseMarginValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- RESPONSE PADDING (Left/Right) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Padding (Left/Right):"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderResponsePaddingH"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvResponsePaddingHValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- RESPONSE PADDING (Top/Bottom) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Padding (Top/Bottom):"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/sliderResponsePaddingV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:max="100"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/tvResponsePaddingVValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- (spacer/separator) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp" />

        <!-- Background color picker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Background:"
                android:textStyle="bold" />

            <View
                android:id="@+id/screenBackgroundColorPicker"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- (spacer/separator) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="8dp" />

        <!-- Timer Sound (unchanged) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Timer Sound:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/timerSoundEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="mytimersound.mp3" />

        <Button
            android:id="@+id/btnPreviewSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Preview Sound" />

        <!-- Transitions Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Transitions:"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerTransitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" />

        <!-- BOTTOM ROW: OK | DEFAULTS | CANCEL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK" />

            <Button
                android:id="@+id/btnDefaults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defaults"
                android:layout_marginStart="16dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
