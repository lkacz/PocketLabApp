<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="@string/app_version"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Selected:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvSelectedProtocolName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Selected protocol:None"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnShowProtocolContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Show Protocol Content" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="22dp"
        android:text="@string/start_protocol_button"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSelectFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_file_button" />

    <Button
        android:id="@+id/btnUseDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/use_demo_button" />

    <Button
        android:id="@+id/btnUseTutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Load Tutorial Protocol" />

    <Button
        android:id="@+id/btnToggleTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Theme" />

    <Button
        android:id="@+id/btnShowAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show About" />

    <Button
        android:id="@+id/btnSelectMediaFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Select Media Folder" />

    <!-- Newly added customization button -->
    <Button
        android:id="@+id/btnCustomizeApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Customize App" />

</LinearLayout>
