<resources>

    <!-- (A) Material Components DayNight theme (common in older libraries but still valid) -->
    <style name="Theme.Material3.Light.NoActionBar"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Add your color overrides here -->
    </style>

    <!-- (B) Material 3 DayNight theme (available in some 1.8.0+ or 1.9.0+ versions of material) -->
    <style name="Theme.Material3.DayNight.NoActionBar"
        parent="Theme.Material3.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- If you prefer a strictly “Light” M3 theme, try referencing the library’s actual name: -->
    <style name="Theme.Material3.Light.NoActionBar"
        parent="Theme.Material3.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>

